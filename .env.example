# FastAPI Configuration
# Copy this file to .env and adjust values for your environment

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
WORKERS=1

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# API Configuration
API_PREFIX=/api/v1
API_TITLE=Heatpump Simulator API
API_VERSION=0.1.0

# Security
SECRET_KEY=change-me-in-production-use-long-random-string
API_KEY_ENABLED=false

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100

# Task Queue (Redis/Celery - for future async tasks)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Simulation Configuration
SIMULATION_TIMEOUT=300
CACHE_ENABLED=false
CACHE_TTL=3600

# Google Cloud Storage Configuration (for Reports)
GCP_PROJECT_ID=lotsawatts
GCS_BUCKET_NAME=heatpump-outputs
GCS_LOCATION=EU
REPORTS_EXPIRY_DAYS=30
